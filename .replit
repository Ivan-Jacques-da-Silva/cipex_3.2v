modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"
packages = ["mysql80"]

[env]
PORT = "5000"
HOST = "0.0.0.0"

# comando único de execução (Vite)
run = ["bash","-lc","cd backend && node index.js & cd frontend && npm run dev -- --host --port $PORT"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
