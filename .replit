modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_05"

[env]
PORT = "5000"
HOST = "0.0.0.0"

run = ["bash", "-c", "cd backend && npm install && node index.js & npm install && npm start"]

[[ports]]
localPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 47800581
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm install && node index.js &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm start"
