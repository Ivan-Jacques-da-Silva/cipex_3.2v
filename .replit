
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_05"

[env]
PORT = "5000"
HOST = "0.0.0.0"

run = "cd backend && npm install && node index.js & npm install && npm start"

[[ports]]
localPort = 3001
externalPort = 3001

[deployment]
run = "cd backend && node index.js & npm run build && npx serve -s build -l 5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && PORT=3001 node index.js"
waitForPort = 3001

[[workflows.workflow]]
name = "Backend PostgreSQL"
author = 47801225
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm install && npx prisma generate && node index.js"

[agent]
expertMode = true
