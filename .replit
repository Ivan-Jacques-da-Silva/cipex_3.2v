
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_05"

[env]
PORT = "5000"
HOST = "0.0.0.0"

run = "cd backend && npm install && node index.js & npm install && npm start"

[[ports]]
localPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = "cd backend && node index.js & npm run build && npx serve -s build -l 5000"
